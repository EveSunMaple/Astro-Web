---
import { Icon } from "astro-icon/components";
import CommentForm from "./CommentForm.astro";
import CommentList from "./CommentList.astro";
import PostReactions from "./PostReactions.astro";

interface Props {
  slug: string;
}

const { slug } = Astro.props;
---

<section class="comments-section mt-16">
  <div class="card bg-base-200/50 backdrop-blur-sm p-6">
    <h2 class="text-2xl font-bold mb-8 flex items-center gap-2">
      <Icon name="lucide:message-circle" class="w-6 h-6" />
      Comments
    </h2>

    <PostReactions slug={slug} />

    <div class="divider my-8"></div>

    <CommentForm slug={slug} />

    <div class="mt-8">
      <CommentList slug={slug} />
    </div>
  </div>
</section>
