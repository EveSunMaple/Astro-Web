---
import { Image } from "astro:assets";
import Menu from "../components/ProfileCardMenu.astro";
import Footer from "../components/ProfileCardFooter.astro";
import { USER_AVATAR } from "../consts";
---

<div
  class="flex-col gap-4 mb-8 w-full sticky md:sticky lg:relative bg-base-100 p-4 transition-colors shadow-xl rounded-xl"
>
  <div class="avatar p-4">
    <Image
      class="mask mask-circle"
      format="webp"
      width={300}
      height={300}
      src={USER_AVATAR}
      alt="Profile"
      loading="eager"
    />
  </div>
  <Menu />
  <Footer />
</div>
