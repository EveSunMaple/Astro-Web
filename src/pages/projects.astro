---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">My Projects</div>
  </div>
  <HorizontalCard
    title="InfinitySky"
    img="/post_img.webp"
    desc="一个全新的 Easy2d 项目，也作为我学习的过程。"
    url="https://github.com/EveSunMaple/InfinitySky"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="code-judge"
    img="/post_img.webp"
    desc="一个简约而不简单的评测机"
    url="https://github.com/EveSunMaple/code-judge"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Word-testing-application"
    img="/post_img.webp"
    desc="一个用Python和Tkinter制作的单词测试应用"
    url="https://github.com/EveSunMaple/Word-testing-application"
    badge=""
  />
</BaseLayout>
