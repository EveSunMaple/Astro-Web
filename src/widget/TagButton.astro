---
interface Props {
  text: string;
  count: number;
  href: string;
  type?: "category" | "tag";
}

const { text, count, href, type = "tag" } = Astro.props;
const baseClass = type === "category" ? "btn-category" : "btn-tag";
---

<span class="group relative inline-flex">
  <a
    href={href}
    class="btn btn-xs px-3 hover:-translate-y-0.5 transition-all duration-300 hover:shadow-md"
    class:list={[baseClass]}
  >
    {text}
    <span
      class="ml-1.5 min-w-[1.5rem] inline-flex items-center justify-center rounded-full text-xs font-medium bg-base-100/10 px-1.5"
    >
      {count}
    </span>
  </a>
</span>
