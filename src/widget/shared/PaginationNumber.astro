---
interface Props {
  number: string | number;
  current: number;
  baseUrl: string;
  isActive?: boolean;
}

const { number, current, baseUrl, isActive = false } = Astro.props;
const href = number == 1 ? baseUrl : `${baseUrl}/${number}`;
---

<a
  href={href}
  title={`Page ${number}`}
  aria-label={`Page ${number}`}
  class:list={[
    "join-item btn bg-base-100 hover:scale-105 transition-transform duration-300",
    number === current && "btn-active",
  ]}
>
  {number}
</a>
